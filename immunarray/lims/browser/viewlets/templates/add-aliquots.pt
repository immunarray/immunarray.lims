<html>
  <body>
    <style type="text/css">
        .add-aliquots-outer {
          padding:10px;
          margin-bottom:10px;
          border:1px solid lightgrey;
          border-radius: 2px;
        }
        .add-aliquots-outer .table {
          display:table;
          width:100%;
        }
        .add-aliquots-outer .tr {
          display:table-row;
          width:100%;
        }
        .add-aliquots-outer .td {
          display:table-cell;
          vertical-align:middle;
        }
        .add-aliquots-outer .center {
          text-align:center;
        }
        .add-aliquots-button {
          margin-top:10px;
        }
        .add-aliquots-outer .feedback {
          color:#666666;
          padding-top: 10px;
        }
    </style>

    <div class="add-aliquots-outer">
      <form name="add-aliquots" action="add-aliquots-submit" method="POST">
        <div class="table">
          <div class="tr">
            <div class="td center" style="whitespace:nowrap">
              Aliquot type:&nbsp;<select name="aliquot_type" class="aliquot-type">
                <option value="bulk">Create bulk aliquots</option>
                <option value="working">Create working aliquots</option>
              </select>
            </div>
            <div class="td center">
              Volume (uL):&nbsp;<input name="aliquot_volume" type="text" class="aliquot-volume" placeholder="Volume of aliquots">
            </div>
            <div class="td center">
              Count:&nbsp;<input name="aliquot_count" type="text" class="aliquot-count" placeholder="Number of aliquots">
            </div>
          </div>
        </div>
        <input type="submit" class="add-aliquots-button" value="Add Aliquots"/>
        <div class="feedback" style="display:none"/>
        <span tal:replace="structure context/@@authenticator/authenticator"/>
      </form>
    </div>
    <script src="++resource++immunarray.lims/js/add-aliquots.js"></script>
  </body>
</html>
