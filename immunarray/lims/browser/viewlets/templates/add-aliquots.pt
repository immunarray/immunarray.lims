<html>
  <body>
    <style type="text/css">
        .add-aliquots-outer {
          padding:10px;
          margin-bottom:10px;
          border:1px solid lightgrey;
          border-radius: 2px;
        }
        .add-aliquots-outer .table {
          display:table;
          width:100%;
        }
        .add-aliquots-outer .tr {
          display:table-row;
          width:100%;
        }
        .add-aliquots-outer .td {
          display:table-cell;
          vertical-align:middle;
        }
        .add-aliquots-outer .center {
          text-align:center;
        }
        .add-aliquots-button {
          margin-top:10px;
        }
        .add-aliquots-outer .feedback {
          color:#666666;
          padding-top: 10px;
        }
        /*This is Plone's style for some inputs; I just want to apply the same to all. */
        .add-aliquots-outer input {
          height: 34px;
          padding: 6px 12px !important;
          font-size: 14px;
          line-height: 1.42857143;
          color: #696969;
          background-color: #fff;
          background-image: none;
          border: 1px solid #ccc;
          border-radius: 4px;
          -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
          box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
          -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
          -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
          transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
      }
    </style>

    <div class="add-aliquots-outer">
      <form name="add-aliquots" action="add-aliquots" method="POST">
        <div class="table">
          <div class="tr">
            <div class="td center" style="whitespace:nowrap">
              <select name="aliquot_type" class="aliquot-type">
                <option value="bulk">Create bulk aliquots</option>
                <option value="working">Create working aliquots</option>
              </select>
            </div>
            <div class="td center">
              Volume (uL):&nbsp;<input name="aliquot_volume" type="number" class="aliquot-volume" placeholder="Volume of aliquots">
            </div>
            <div class="td center">
              Count:&nbsp;<input name="aliquot_count" type="number" class="aliquot-count" placeholder="Number of aliquots">
            </div>
          </div>
        </div>
        <input type="submit" class="add-aliquots-button" value="Add Aliquots"/>
        <div class="feedback" style="display:none"/>
      </form>
    </div>
    <script src="++resource++immunarray.lims/js/add-aliquots.js"></script>
  </body>
</html>
