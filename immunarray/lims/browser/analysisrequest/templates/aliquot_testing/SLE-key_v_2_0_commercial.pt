        </table>

        <!-- Solution Summary Table -->
        <table id="table9" class="delta">
          <tr style="background-color:lightgrey;">
            <td style="text-align:center;width:250px"><strong>Solutions</strong></td>
            <td style="text-align:center"><strong>Batch #</strong></td>
            <td style="text-align:center;width:250px"><strong>Expiration Date</strong></td>
          </tr>
          <tr>
            <td>Reverse Osmosis Water (ROW)</td>
            <td style="text-align:center">N/A</td>
            <td style="text-align:center">N/A</td>
          </tr>
          <tr>
            <td>10X PBS</td>
            <td><select name="10XPBSLot"/></td>
            <td class="10XPBSExpData"/>
          </tr>
          <tr>
            <td>1X PBS</td>
            <td><select name="1XPBSLot"/></td>
            <td class="1XPBSExpData"/>
          </tr>
          <tr>
            <td>1X PBS - 22.4% Tween 20</td>
            <td><select name="1XPBS22_4Tween20Lot"/></td>
            <td class="1XPBS22_4Tween20ExpData"/>
          </tr>
          <tr>
            <td>1X PBS - 1% Casein</td>
            <td><select name="1XPSB1PercentCaseinLot"/></td>
            <td class="1XPSB1PercentCaseinExpData"/>
          </tr>
          <tr>
            <td>G&alpha;hulgG-Cy5 in 50% Glycerol</td>
