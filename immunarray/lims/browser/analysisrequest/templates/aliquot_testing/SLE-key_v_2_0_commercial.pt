            <td colspan="2"><input type="text" name="chip-2_well-8" class="sampleid-aliquot chip-2 well-8"/></td>
            <td colspan="2"><input type="text" name="chip-3_well-8" class="sampleid-aliquot chip-3 well-8"/></td>
            <td colspan="2"><input type="text" name="chip-4_well-8" class="sampleid-aliquot chip-4 well-8"/></td>
            <td/>
            <td/>
            <td/>
          </tr>
          <tr>
            <td rowspan="4"></td>
            <td>iChip 1 ID</td>
            <td><input type="text" name="chip-id-1" class="chip-id ichip-1"></td>
            <td>iChip 2 ID</td>
            <td><input type="text" name="chip-id-2" class="chip-id ichip-2"></td>
            <td>iChip 3 ID</td>
            <td><input type="text" name="chip-id-3" class="chip-id ichip-3"></td>
