<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ploneconf.site">

<body>
    <metal:content-core fill-slot="content-core">
        <style type="text/css">
            /*default table*/
            .table {
                border-top:1px solid #ddd;
                display: table;
                width: 100%;
            }
            .tr  {
                display: table-row;
            }
            .th {
                display: table-cell;
                padding:5px;
            }
            .td {
                display: table-cell;
                padding:5px;
                border-bottom:1px solid #ddd;
            }
            .label { width: 33% }
            .value { width: 66% }
        </style>
        <div class="table">
            <div class="tr">
                <div class="td label">IChip ID</div>
                <div class="td value" tal:content="context/id">
                </div>
            </div>
            <div class="tr">
                <div class="td label">IChip Run Date</div>
                <div class="td value" tal:content="context/IChipLotRunDate">
                </div>
            </div>​
            <div class="tr">
                <div class="td label">IChip Status</div>
                <div class="td value" tal:content="context/IChipStatus">
                </div>
            </div>​
            <div class="tr">
                <div class="td label">IChip Storage Location</div>
                <div class="td value" tal:content="context/IChipStorageLocation">
                </div>
            </div>​
        </div>
    </metal:content-core>
</body>
</html>
